{
    "roles": {
        "critical_columns": [
            "customer_id"
        ],
        "protected_columns": [
            "notes"
        ]
    },
    "standardization": {
        "global_trim_whitespace": true,
        "global_remove_non_printable": true,
        "global_case_map": "none"
    },
    "parsing": {
        "column_types": {
            "amount": "numeric",
            "signup_date": "datetime",
            "is_active": "boolean",
            "discount_pct": "numeric",
            "account_balance": "numeric",
            "flag": "boolean"
        },
        "numeric": {
            "on_failure": "null",
            "allow_currency_symbols": true,
            "allow_percent_symbol": true
        },
        "boolean": {
            "on_failure": "null"
        },
        "datetime": {
            "on_failure": "drop_row"
        }
    },
    "missing_data": {
        "enabled": true,
        "drop_if_missing_critical": true,
        "imputation": {
            "numeric": {
                "default": "mean",
                "allow_if_missing_pct_leq": 0.5
            },
            "boolean": {
                "default": "mode"
            }
        }
    }
}